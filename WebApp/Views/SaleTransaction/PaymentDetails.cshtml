@using WebApp.Models.Classes
@model List<SaleTransaction>

@{
    ViewData["Title"] = "PaymentDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h4>Satış Detayı</h4>
<br />
<table class="table table-hover">
    <tr>
        
        <th>Ürün İsim&Model</th>

        <th>Ödeme Detayları</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.ProductName @item.Product.ProductModel</td>
            <td>@item.StockAmount</td>
            <td>@item.TotalPrice</td>
            <td><a href="/SaleTransaction/PaymentDetails/@item.SaleTransactionId" class="btn btn-light">Detaylar</a></td>

        </tr>
    }
</table>
<a href="#" class="btn btn-default" style="background-color:aqua">Yeni Kalem Girişi</a>




@using WebApp.Models.Classes
@model List<SaleTransaction>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Satış Detayı</h4>
<br />
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Satış Sorumlusu</th>
        <th>Müşteri</th>
        <th>Ürün İsim&Model</th>
        <th>Adet</th>
        <th>Toplam Fiyat</th>
        <th>Ödeme Detayları</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SaleTransactionId</td>
            <td>@item.Staff.StaffFullName</td>
            <td>@item.Customer.CustomerName @item.Customer.CustomerSurname</td>
            <td>@item.Product.ProductName @item.Product.ProductModel</td>
            <td>@item.StockAmount</td>
            <td>@item.TotalPrice</td>
            <td><a href="/SaleTransaction/PaymentDetails/@item.SaleTransactionId" class="btn btn-light">Detaylar</a></td>

        </tr>
    }
</table>



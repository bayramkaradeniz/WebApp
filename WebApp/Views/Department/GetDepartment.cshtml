@model WebApp.Models.Classes.Department
@{
    ViewData["Title"] = "GetDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Kategori Güncelleme</h1>
<br />
@using (Html.BeginForm("UpdateDepartment", "Department", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DepartmentName)
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
        @Html.LabelFor(x => x.State)
        @Html.TextBoxFor(x => x.State, new { @class = "form-control" })
        @Html.HiddenFor(x => x.DepartmentId)
        <br />
        <button class="btn btn-outline-warning">Güncelle</button>
    </div>
}

@using WebApp.Models.Classes
@model List<Staff>
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Detay</h4>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
        Departman : @ViewBag.Name
    </li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>İsim</th>
        <th>Soy İsim</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StaffId</td>
            <td>@item.StaffName</td>
            <td>@item.StaffSurname</td>
            <td>@item.StaffImage</td>
            <td><a href="/Department/DepartmentStaffSale/@item.StaffId" class="btn btn-info">İşlemler</a></td>
        </tr>
    }
</table>

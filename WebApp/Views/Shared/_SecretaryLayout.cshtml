
@{
    Layout = null;
}


<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/webpanel/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/webpanel/css/simple-sidebar.css" rel="stylesheet">

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">HuxxTech</div>
            <div class="list-group list-group-flush">
                <a href="/SecretaryPanel/Customer" class="list-group-item list-group-item-action bg-light">Müşteri</a>
                <a href="/CustomerPanel/MyProfile" class="list-group-item list-group-item-action bg-light">Profilim</a>
                <a href="/CustomerPanel/Deneme" class="list-group-item list-group-item-action bg-light">Deneme</a>

                <a href="/CustomerPanel/CargoTracking" class="list-group-item list-group-item-action bg-light">Kargo Takip</a>
                <a href="/CustomerPanel/IncomingMessages" class="list-group-item list-group-item-action bg-light">Mesajlar</a>
                <a href="javascript:void(0)" class="list-group-item list-group-item-action bg-light" onclick="logoutFormSubmitSidebar()">Çıkış Yap</a>
                <form id="logout-form-sidebar" action="/CustomerPanel/Logout" method="POST" style="display: none;">
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Panel On/Off</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="/SecretaryPanel/Customer">Müşteri <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Mesaj </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/CustomerPanel/Deneme">Deneme </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="/CustomerPanel/CargoTracking" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kargo
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a href="javascript:void(0)" class="dropdown-item" onclick="logoutFormSubmitDropdown()">Çıkış Yap</a>
                                <form id="logout-form-dropdown" action="/CustomerPanel/Logout" method="POST" style="display: none;">
                                    @Html.AntiForgeryToken()
                                </form>
                                <a class="dropdown-item" href="#">Siparişler</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Yardım</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">

                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/webpanel/vendor/jquery/jquery.min.js"></script>
    <script src="~/webpanel/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
        function logoutFormSubmitSidebar() {
            document.getElementById('logout-form-sidebar').submit(); // Sidebar logout formunu gönder
        }

        function logoutFormSubmitDropdown() {
            document.getElementById('logout-form-dropdown').submit(); // Dropdown logout formunu gönder
        }
    </script>

</body>

</html>


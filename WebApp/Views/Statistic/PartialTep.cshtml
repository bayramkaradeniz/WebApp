@using WebApp.Models.Classes
@model List<Product>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürünler</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>İsim</th>
                            <th>Marka</th>
                            <th>Stok</th>
                            <th>Görsel</th>
                            <th>Alış Fiyatı</th>
                            <th>Satış Fiyatı</th>
                            <th>Durum</th>
                            <th>Periyot</th>
                            <th>Kategori</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.ProductId</td>
                                <td>@i.ProductName</td>
                                <td>@i.Brand</td>
                                <td>@i.Stock</td>
                                <td>@i.ProductModel</td>
                                <td>@i.PurchasePrice</td>
                                <td>@i.SalePrice</td>
                                <td>@i.State</td>
                                <td>@i.MaintenanceIntervalInMonths</td>
                                <td>@(i.Category.CategoryName)</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
@using WebApp.Models.Classes
@model List<Customer>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Müşteriler-Hover</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Mail</th>
                            <th>Phone</th>
                            <th>Adress</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model) 
                        {
                            <tr>
                                <td>@i.CustomerId</td>
                                <td>@i.CustomerName @i.CustomerSurname</td>
                                <td>@i.CustomerEmail</td>
                                <td>@i.CustomerPhone</td>
                                <td>@i.CustomerCity @i.CustomerDistrict @i.CustomerAdress</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
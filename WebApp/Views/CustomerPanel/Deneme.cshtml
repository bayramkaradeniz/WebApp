    <!-- jQuery and Bootstrap JS -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Tüm aktif tabları devre dışı bırak
            document.querySelectorAll('.nav-link').forEach(function (tab) {
                tab.classList.remove('active');
            });

            // Tüm tab-content'i gizle
            document.querySelectorAll('.tab-pane').forEach(function (content) {
                content.classList.remove('active');
                content.classList.remove('show');
            });

            // Form validasyonu
            document.getElementById('settingsForm').addEventListener('submit', function (event) {
                var agreeToTerms = document.getElementById('agreeToTerms');
                var termsError = document.getElementById('termsError');

                if (!agreeToTerms.checked) {
                    termsError.style.display = 'block';
                    event.preventDefault(); // Form gönderimini engelle
                } else {
                    termsError.style.display = 'none';
                }
            });
        });
        $('#collapseOne').on('shown.bs.collapse', function () {
            // Accordion açıldığında işlemler başlatılır
            console.log('Accordion 1 açıldı, işlemler başlatılıyor.');
        });
        $('#exampleModal').on('shown.bs.modal', function () {
            // Modal açıldığında işlemleri başlat
            console.log('Modal açıldı, işlemler başlatılıyor.');
        });
        document.getElementById('action1').addEventListener('click', function () {
            console.log('İşlem 1 başlatıldı.');
        });
        document.getElementById('action2').addEventListener('click', function () {
            console.log('İşlem 2 başlatıldı.');
        });



            document.getElementById('loadContent1').addEventListener('click', function () {
                document.getElementById('content').innerHTML = "Tab 1 İçeriği";
                console.log("Tab 1 yüklendi ve işlemler başlatıldı.");
            });

        document.getElementById('loadContent2').addEventListener('click', function () {
            document.getElementById('content').innerHTML = "Tab 2 İçeriği";
            console.log("Tab 2 yüklendi ve işlemler başlatıldı.");
        });



    </script>
</body>
</html>

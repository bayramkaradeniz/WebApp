@{
    ViewData["Title"] = "Deneme";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewData["Title"] </title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Outer Tab Panel (3x3 Structure)</h2>

        <!-- Outer Tab Panel -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="#outerTab1" data-toggle="tab">Outer Tab 1</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#outerTab2" data-toggle="tab">Outer Tab 2</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#outerTab3" data-toggle="tab">Outer Tab 3</a>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <div class="tab-pane fade" id="outerTab1">
                <h4>Inner Tab Panel 1</h4>
                <!-- Inner Tab Panel 1 -->
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab1-1" data-toggle="tab">Inner Tab 1-1</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab1-2" data-toggle="tab">Inner Tab 1-2</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab1-3" data-toggle="tab">Inner Tab 1-3</a>
                    </li>
                </ul>
                <div class="tab-content mt-3">
                    <div class="tab-pane fade" id="innerTab1-1">
                        <p>Content for Inner Tab 1-1</p>
                    </div>
                    <div class="tab-pane fade" id="innerTab1-2">
                        <p>Content for Inner Tab 1-2</p>
                    </div>
                    <div class="tab-pane fade" id="innerTab1-3">
                        <p>Content for Inner Tab 1-3</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="outerTab2">
                <h4>Inner Tab Panel 2</h4>
                <!-- Inner Tab Panel 2 -->
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab2-1" data-toggle="tab">Inner Tab 2-1</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab2-2" data-toggle="tab">Inner Tab 2-2</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab2-3" data-toggle="tab">Inner Tab 2-3</a>
                    </li>
                </ul>
                <div class="tab-content mt-3">
                    <div class="tab-pane fade" id="innerTab2-1">
                        <p>Content for Inner Tab 2-1</p>
                    </div>
                    <div class="tab-pane fade" id="innerTab2-2">
                        <p>Content for Inner Tab 2-2</p>
                    </div>
                    <div class="tab-pane fade" id="innerTab2-3">
                        <p>Content for Inner Tab 2-3</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="outerTab3">
                <h4>Inner Tab Panel 3</h4>
                <!-- Inner Tab Panel 3 -->
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab3-1" data-toggle="tab">Inner Tab 3-1</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab3-2" data-toggle="tab">Inner Tab 3-2</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#innerTab3-3" data-toggle="tab">Inner Tab 3-3</a>
                    </li>
                </ul>
                <div class="tab-content mt-3">
                    <div class="tab-pane fade" id="innerTab3-1">
                        <p>Content for Inner Tab 3-1</p>
                    </div>
                    <div class="tab-pane fade" id="innerTab3-2">
                        <p>Content for Inner Tab 3-2</p>
                    </div>
                    <div class="tab-pane fade" id="innerTab3-3">
                        <p>Content for Inner Tab 3-3</p>
                        <!-- Form Example -->
                        <form class="form-horizontal mt-5" id="settingsForm" method="post" action="/CustomerPanel/UpdateCustomer">
                            <div class="form-group row">
                                <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputName" placeholder="Name" name="CustomerName" value="">
                                </div>
                            </div>
                            <!-- Other form fields can go here -->

                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="agreeToTerms" name="AgreeToTerms">
                                        <label class="form-check-label" for="agreeToTerms">Bilgiler Doğrudur.</label>
                                    </div>
                                    <div id="termsError" class="text-danger" style="display: none;">Bilgilerin Doğruluğunu Onaylamalısınız!</div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <button type="submit" class="btn btn-danger" id="submitBtn">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

       
    </div>
    <br />

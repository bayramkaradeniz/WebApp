@model WebApp.Models.Classes.BillItem
@{
    ViewData["Title"] = "NewItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Yeni Departman Ekle</h1>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Description)
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Amount)
    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
    <br />@Html.LabelFor(x => x.UnitPrice)
    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
    <br />@Html.LabelFor(x => x.Sum)
    @Html.TextBoxFor(x => x.Sum, new { @class = "form-control" })

    <br />@Html.LabelFor(x => x.BillId)
    @Html.TextBoxFor(x => x.BillId, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Ekle</button>
</form>

@using WebApp.Models.Classes
@model List<Bill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #table td {
        word-wrap: break-word;
        white-space: normal;
        vertical-align: middle;
    }

    #table th {
        vertical-align: middle;
    }
</style>

<h4>Fatura Listesi</h4>
<table id="category" class="table table-bordered" style="margin-top:20px">
    <thead>

    <th>Id</th>
    <th>Seri No</th>
    <th>Sıra No</th>
    <th>Tarih</th>
    <th>Saat</th>
    <th>Toplam Fiyat</th>

    <th>Güncelle</th>
    <th>Detaylar</th>
    <th>PopUp</th>
    <th>Kalem</th>

    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.BillId</td>
                <td>@i.BillSequenceNo</td>
                <td>@i.BillSerialNo</td>
                <td>@i.Date</td>
                <td>@i.Hour</td>
                <td>@i.Total</td>

                <td><a href="/Bill/GetBill/@i.BillId" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Bill/Details/@i.BillId" class="btn btn-success">Detaylar</a></td>
                <td><a href="/Bill/Details/@i.BillId" class="btn btn-danger">PopUp</a></td>
                <td><a href="/Bill/Details/@i.BillId" class="btn btn-info">Kalem</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Bill/NewBill" class="btn btn-dark">Yeni Fatura</a>
<br />
<br />
<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#Modal1">PopUp Pencere</button>








<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>


    $('#table').dataTable({});

</script>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">PopHuxx</h4>
            </div>
            <div class="modal-body">
                <table class="table table-borderless">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.BillSerialNo</td>
                            <td>@i.BillSequenceNo</td>
                            <td>@i.Total</td>
                        </tr>
                    }
                    </table>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>






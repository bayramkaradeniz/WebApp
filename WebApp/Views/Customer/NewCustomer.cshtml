@model WebApp.Models.Classes.Customer

@{
    ViewData["Title"] = "NewCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Yeni Müşteri Sayfası</h4>
<form class=" form-group" method="post">
    @Html.LabelFor(x => x.CustomerName)
    @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CustomerSurname)
    @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CustomerEmail)
    @Html.TextBoxFor(x => x.CustomerEmail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CustomerPhone)
    @Html.TextBoxFor(x => x.CustomerPhone, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CustomerCity)
    @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CustomerDistrict)
    @Html.TextBoxFor(x => x.CustomerDistrict, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CustomerAdress)
    @Html.TextBoxFor(x => x.CustomerAdress, new { @class = "form-control" })
    
    <button class="btn btn-outline-primary">Ekle</button>
</form>


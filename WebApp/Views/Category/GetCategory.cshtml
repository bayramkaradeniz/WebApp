@model WebApp.Models.Classes.Category
@{
    ViewData["Title"] = "GetCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Kategori Güncelleme</h1>
<br />
@using (Html.BeginForm("UpdateCategory","Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.CategoryName)
        @Html.TextBoxFor(x => x.CategoryName,new { @class = "form-control" })
        @Html.HiddenFor(x => x.CategoryId)
        <br />
        <button class="btn btn-outline-warning">Güncelle</button>
    </div>
}
